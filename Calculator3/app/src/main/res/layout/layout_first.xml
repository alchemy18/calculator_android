<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <EditText
        android:id="@+id/idInput1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Input 1"
        android:inputType="number" />

    <EditText
        android:id="@+id/idInput2"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:hint="Input 2"
        android:inputType="number" />

    <Button
        android:id="@+id/idPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="97dp"
        android:layout_marginTop="188dp"
        android:text="+"
        android:textSize="30sp"
        android:onClick="onplus"/>

    <Button
        android:id="@+id/idMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/idInput1"
        android:layout_alignTop="@+id/idPlus"
        android:text="-"
        android:textSize="30sp"
        android:onClick="onminus"/>

    <Button
        android:id="@+id/idMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/idPlus"
        android:layout_marginBottom="181dp"
        android:text="*"
        android:textSize="30sp"
        android:onClick="onmul"/>

    <Button
        android:id="@+id/idDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/idInput1"
        android:layout_alignTop="@+id/idMul"
        android:text="/"
        android:textSize="30sp"
        android:onClick="ondiv"/>

    <TextView
        android:id="@+id/idResult"
        android:layout_width="264dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:text="RESULT"
        android:textSize="30sp" />
</RelativeLayout>